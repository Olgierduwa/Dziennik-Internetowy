@model ProjektPiotrMVC.Models.ViewsModels.DelFromClassViewModel

@{
    ViewBag.Title = "Delete";
}

<style type="text/css">

    #blok0 {
        padding: 100px;
        font-size: 40px;
        text-align: center;
    }
</style>

<div id="blok0">
    Chcesz usunąć użytkownika "@Html.DisplayFor(model => model.Uczen.Email)" z danej klasy?

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.KlasaID)
        @Html.HiddenFor(model => model.UczenID)
        <input type="submit" style="width:140px" value="Usuń z klasy" class="btn btn-danger" />
        <input type="button" style="width:140px" value="Anuluj" class="btn btn-default" onclick="location.href = '@Request.UrlReferrer'" />
    }
</div>
