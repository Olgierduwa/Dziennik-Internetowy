@model ProjektPiotrMVC.Models.ViewsModels.AddToClassViewModel
@{
    ViewBag.Title = "AddToClass";
}

<h2>Dodaj ucznia do klasy</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.KlasaID)
    <div class="form-group">
        <div class="col-md-12">
            <br />
        </div>
        <div class="col-md-12">
            @Html.DropDownList("UczenID", null, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="col-md-12">
            <br />
        </div>
        <div class="col-md-12">
            <input type="button" style="width:100px" value="Anuluj" class="btn btn-default" onclick="location.href = '@Url.Action("Edit", "Klasas", new { id = Model.KlasaID })'" />
            <input type="submit" style="width:100px" value="Dodaj" class="btn btn-success" />
        </div>
        <div class="col-md-12">
            <br />
        </div>
    </div>
}

