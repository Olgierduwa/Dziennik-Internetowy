@model ProjektPiotrMVC.Models.ViewsModels.AddToRodzicViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Dodaj dziecko</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.RodzicID)

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Wybierz dziecko", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("UczenID", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" style="width:100px" value="Anuluj" class="btn btn-default" onclick="location.href = '@Url.Action("Index", new { id = Model.RodzicID })'" />
                <input type="submit" style="width:100px" value="Dodaj" class="btn btn-success" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
