@model ProjektPiotrMVC.Models.Przedmiot

@{
    ViewBag.Title = "Delete";
}

<style type="text/css">

    #blok0 {
        padding: 100px;
        font-size: 40px;
        text-align: center;
    }
</style>

<div id="blok0">
    Chcesz usunąć przedmiot "@Html.DisplayFor(model => model.Nazwa)"
    prowadzącego @Html.DisplayFor(model => model.Prowadzacy.Email)?

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <input type="submit" style="width:140px" value="Usuń przedmiot" class="btn btn-danger" />
        <input type="button" style="width:140px" value="Anuluj" class="btn btn-default" onclick="location.href = '@Request.UrlReferrer'" />
    }
</div>
