@model ProjektPiotrMVC.Models.Ogloszenie

@{
    ViewBag.Title = "Delete";
}

<style type="text/css">

    #blok0 {
        padding: 100px;
        font-size: 40px;
        text-align: center;
    }
</style>

<div id="blok0">
    Chcesz usunąć ogłoszenie "@Html.DisplayFor(model => model.Tytul)"?

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(m => m.OgloszenieID)
        @Html.HiddenFor(model => model.Prywatne)
        @Html.AntiForgeryToken()
        <input type="submit" style="width:200px" value="Usuń ogłoszenie" class="btn btn-danger" />
        <input type="button" style="width:140px" value="Anuluj" class="btn btn-default" onclick="location.href = '@Request.UrlReferrer'" />
    }
</div>
