@model ProjektPiotrMVC.Models.Plik

@{
    ViewBag.Title = "Delete";
}

<style type="text/css">

    #blok0 {
        padding: 100px;
        font-size: 40px;
        text-align: center;
    }
</style>

<div id="blok0">
    Chcesz usunąć plik "@Html.DisplayFor(model => model.Nazwa)" z Twojego przedmiotu?

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(m=>m.PlikID)
        @Html.AntiForgeryToken()
        <input type="submit" style="width:140px" value="Usuń plik" class="btn btn-danger" />
        <input type="button" style="width:140px" value="Anuluj" class="btn btn-default" onclick="location.href = '@Request.UrlReferrer'" />
    }
</div>
