@model ProjektPiotrMVC.Models.IndexViewModel
@{
    ViewBag.Title = "Edycja profilu";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        <h4>Zarządzaj kontem</h4>
        <hr />
        <div class="form-horizontal">

            <div class="form-group">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-md-10">
                    <input type="button" style="width:140px" value="Anuluj" class="btn btn-default"
                           onclick="location.href = '@Url.Action("Index", "Manage")'" />
                    <input type="submit" style="width:140px" value="Zapisz Zmiany" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
}